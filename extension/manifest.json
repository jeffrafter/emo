{
  "manifest_version": 2,

  "name": "GitHub Emotions Plugin",
  "description": "Get those feels",
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon@2x.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": [
      "github.com/*/*/issues/*",
      "github.com/*/*/pull/*"
    ],
    "js": ["inject.js"]
  }],
  "web_accessible_resources": ["script.js"]
}
